{
  "manifest_version": 3,
  "name": "Bílasölur – extra specs",
  "version": "1.4",
  "description": "Adds horsepower, city fuel consumption, and last updated date to bilasolur.is listings. Click the toolbar icon to toggle on/off.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://bilasolur.is/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Bílasölur extra specs"
  },
  "content_scripts": [
    {
      "matches": ["https://bilasolur.is/", "https://bilasolur.is/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}